{
  "moduleFileExtensions": ["js", "jsx", "json", "ts", "tsx"],
  "collectCoverage": true,
  "collectCoverageFrom": [
    "server/**/*.{ts,js}",
    "!**/node_modules/**",
    "!**/build/**",
    "!**/coverage/**",
    "!**/pages/**",
    "!server/**/index.js",
    "!**/index.js",
    "!**/next.config.js",
    "!server/server.js"
  ],
  "coverageThreshold": {
    "global": {
      "branches": 1,
      "functions": 1,
      "lines": 1,
      "statements": 1
    }
  },
  "coverageReporters": ["text", "text-summary", "lcov"],
  "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(js|ts)x?$",
  "testPathIgnorePatterns": ["/node_modules/", "/build/", "/coverage/"]
}
